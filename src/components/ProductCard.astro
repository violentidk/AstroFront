---
interface Props {
  id: string;
  title: string;
  price: number;
  image: string;
  slug: string;
}

const { id, title, price, image, slug } = Astro.props;
---

<div class="product-card bg-white rounded-lg shadow-md overflow-hidden">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="text-lg font-semibold">{title}</h3>
    <p class="text-gray-600">${price}</p>
    <div class="flex space-x-2 mt-2">
      <a 
        href={`/products/${slug}`}
        class="flex-1 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-center"
      >
        View Details
      </a>
      <button
        data-add-to-cart
        data-id={id}
        data-title={title}
        data-price={price}
        class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
      >
        Add to Cart
      </button>
    </div>
  </div>
</div> 